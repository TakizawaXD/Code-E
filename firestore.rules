
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to read public user profiles for leaderboards, etc.
    // Allow users to update their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read courses, modules, and lessons
    match /learningPaths/{pathId} {
      allow read: if true;
    }
    
    match /courses/{courseId} {
      allow read: if true;
    }

    match /courses/{courseId}/modules/{moduleId} {
      allow read: if true;
    }

    match /courses/{courseId}/modules/{moduleId}/lessons/{lessonId} {
      allow read: if true;
    }

    // Forum threads can be read by anyone, but only created/updated by logged-in users.
    match /forumThreads/{threadId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Forum posts can be read by anyone, but only created by logged-in users.
    match /forumThreads/{threadId}/posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
    }
    
    // Users can only manage their own progress and notifications.
    match /users/{userId}/progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
