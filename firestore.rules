rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la COLECCIÓN de usuarios
    // Permite a cualquier usuario autenticado LISTAR todos los perfiles (necesario para la tabla de clasificación).
    match /users/{document=**} {
      allow list: if request.auth != null;
    }

    // Regla para DOCUMENTOS de usuario individuales
    match /users/{userId} {
      // Permite a cualquiera leer un perfil de usuario individual.
      allow get: if request.auth != null;
      
      // Permite a un usuario crear o actualizar su propio perfil.
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para la colección de hilos del foro
    match /forumThreads/{threadId} {
      // Cualquiera puede leer los hilos del foro.
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear hilos.
      allow create: if request.auth != null;
      
      // Solo el autor original puede actualizar su hilo (por ejemplo, el postCount).
      // O cualquier usuario autenticado puede actualizarlo (para lastPostAt).
      allow update: if request.auth != null;
    }

    // Regla para la subcolección de posts dentro de cada hilo
    match /forumThreads/{threadId}/posts/{postId} {
      // Cualquiera puede leer las respuestas.
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear respuestas.
      allow create: if request.auth != null;
    }

    // Reglas para Cursos, Módulos y Lecciones (solo lectura para todos)
    match /learningPaths/{pathId} {
      allow read: if true;
    }
    match /courses/{courseId} {
      allow read: if true;
    }
    match /courses/{courseId}/modules/{moduleId} {
      allow read: if true;
    }
     match /courses/{courseId}/modules/{moduleId}/lessons/{lessonId} {
      allow read: if true;
    }
    match /courses/{courseId}/modules/{moduleId}/lessons/{lessonId}/comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // Reglas para Notificaciones
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
